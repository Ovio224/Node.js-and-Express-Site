extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= title

        p.lead.text-light
          | #{description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
         each val in technologies
          li= val

        a.button.expanded(href=`${live_link}`, target="blank") Live Demo
        a.button.expanded(href=`${github_link}`, target="blank") GitHub Repo
        a.button.expanded.next(href=`/projects/${count + 1}`) Next Project
    br
    img.image(src=`${image_urls[1]}`)
    img.image(src=`${image_urls[2]}`)
    if image_urls[3]
      img.image(src=`${image_urls[3]}`)