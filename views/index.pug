extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Hey, Potential Employers
      
      p.lead.text-light
        | This portfolio is a marketing document meant to demonstrate my skills and abilities in web development!
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each val in projects
        .cell
          a(href=`/projects/${val.id}`)
            img.thumbnail(src=`${val.image_urls[0]}`)
            h5 #{val.project_name}